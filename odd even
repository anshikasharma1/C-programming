//Write a C program to check weather a number is even or odd by if-else.
#include <stdio.h>
int main()
{
    int num;
    printf("Enter any number to check even or odd: ");
    scanf("%d", &num);
    if(num % 2 == 0)
    {
        printf("Number is Even.");
    }
    else
    {
        printf("Number is Odd.");
    }
    return 0;
}
